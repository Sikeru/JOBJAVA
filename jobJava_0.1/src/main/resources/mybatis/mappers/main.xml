<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Config 3.1//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.jobjava.JJ.main.dao.MainDAO">

	<sql id="search">
		<if test="searchType != null">
			<if test="searchType == 'T'.toString()">AND TITLE LIKE '%' || #{keyword} || '%'</if>
			<if test="searchType == 'C'.toString()">AND CONTENT LIKE '%' || #{keyword} || '%'</if>
			<if test="searchType == 'TC'.toString()">AND (TITLE LIKE '%' || #{keyword} || '%') or (CONTENT
				LIKE '%' || #{keyword} || '%')</if>
		</if>
	</sql>


	<insert id="mnLog">
	<![CDATA[
		INSERT INTO MENU_STATISTICS VALUES(MN_LOG.nextval,#{param1})
	]]>
	</insert>
	
	<select id="selectBestCompany" resultType="java.util.HashMap">
	<![CDATA[
		SELECT * FROM BESTCOMPANY
		WHERE ROWNUM < 11
		ORDER BY BC_NO DESC
	]]>
	</select>
	
	<insert id="insertBestCompany">
	<![CDATA[
		INSERT INTO BESTCOMPANY VALUES(BC_NO.nextval,#{param1},#{param2},#{param3})
	]]>
	</insert>
	
	<select id="selectBCNO" resultType="int">
	<![CDATA[
		SELECT BC_NO.CURRVAL FROM DUAL
	]]>
	</select>
	
	<delete id="deleteBestCompany">
	<![CDATA[
		DELETE FROM BESTCOMPANY
		WHERE BC_NO = #{param1}
	]]>
	</delete>
	
	<update id="updateBestCompany" parameterType="java.util.HashMap">
		UPDATE BESTCOMPANY
		<set>
		 <if test="BC_NAME !='' and BC_NAME != null">
		BC_NAME=#{BC_NAME},
	     </if>
	      <if test="BC_FILENAME !='' and BC_FILENAME != null">
		BC_FILENAME=#{BC_FILENAME},
	     </if>
	    </set>
		WHERE BC_NO=#{BC_NO}
	</update>
	
	<select id="selectAllF_BOARD" resultType="hashmap" parameterType="hashmap">
   <![CDATA[
   SELECT BOARD_NO, 
                TITLE, 
                CONTENT,
                TO_CHAR(F_DATE,'YYYY/MM/DD') F_DATE,
                NAME
         FROM ( 
                SELECT BOARD_NO,
                       TITLE, 
                       CONTENT, 
                       F_DATE,
                       NAME,
                       ROW_NUMBER() OVER(ORDER BY BOARD_NO) AS RNUM
                 FROM F_BOARD, EMP
                 WHERE 1=1 AND EMP.EMP_NO = F_BOARD.EMP_NO]]>
        
        <include refid="search"></include>

		<![CDATA[
		) 
		WHERE RNUM BETWEEN #{rowStart} AND #{rowEnd}
		ORDER BY BOARD_NO ASC
		]]>
   
   </select>
   
   <select id="boardListCnt" parameterType="SearchCriteria"
		resultType="int">

   <![CDATA[
      SELECT count(*)
      FROM F_BOARD
       WHERE 1=1
      ]]>
		<include refid="search"></include>
	</select>
	
	<select id="selectF_BoardTOP3" resultType="hashmap">
	<![CDATA[
	SELECT BOARD_NO, TITLE, TO_CHAR(F_DATE,'YYYY.MM.DD') F_DATE FROM F_BOARD
	WHERE ROWNUM < 4
	ORDER BY BOARD_NO DESC
	]]>
	</select>
	
</mapper>